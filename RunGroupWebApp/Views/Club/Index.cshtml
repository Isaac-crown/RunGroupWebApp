@model IEnumerable<Club>
@{
}

<div class="album py-5 bg-light">
    <div class="container">

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
          @foreach(var m in Model){

        <div class="col-md-4">
          <div class="card shadow-sm">
            <img class="card-img-top" src="@m.Image" width="100%" height="225" alt="Card image cap">

            <div class="card-body">
              <p class="card-text">@m.Title</p>
              <p class="card-text">@m.Description</p>

              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a type="btn -success" asp-cbtnontroller="Club" asp-action="Detail" asp-route-id="@m.Id" class="btn btn-sm btn-outline-secondary">View</a>

                  @if(User.Identity.IsAuthenticated && User.IsInRole("admin"))
                  {
                  <a asp-controller="Club" asp-action="Edit" asp-route-id="@m.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                  <a asp-controller="Club" asp-action="Delete" asp-route-id="@m.Id" class="btn btn-sm btn-outline-secondary">Delete</a>

                  }

                </div>
                <small class="text-muted">@m.ClubCategory</small>
              </div>
            </div>
          </div>
        </div>

          }
      
        
       
        </div>
      </div>
 </div>